{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/data/(.*)", "dest": "/data/$1" },
    { "src": "/update-pairs", "dest": "/api/update-pairs" },
    { "src": "/log", "dest": "/api/log" }
  ]
}